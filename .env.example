# SecuriWatch Environment Configuration

# Elasticsearch Configuration
ES_HEAP_SIZE=1g
ES_CLUSTER_NAME=securiwatch-cluster
# Resource Limits (examples, adjust for your server)
#ES_CPU_LIMIT=2
#ES_MEM_LIMIT=2g

# Kibana Configuration
#KIBANA_PORT=5601
# Resource Limits
#KI_CPU_LIMIT=1
#KI_MEM_LIMIT=1g

# Wazuh Configuration
#WAZUH_PORT=8080
WAZUH_API_USER=admin
WAZUH_API_PASSWORD=securiwatch
# Resource Limits (Manager)
#WZ_MGR_CPU_LIMIT=1.5
#WZ_MGR_MEM_LIMIT=1.5g
# Resource Limits (Dashboard)
#WZ_DB_CPU_LIMIT=1
#WZ_DB_MEM_LIMIT=1g

# Logstash Configuration
LS_HEAP_SIZE=512m
# Resource Limits
#LS_CPU_LIMIT=1
#LS_MEM_LIMIT=1g

# NGINX Configuration
# Resource Limits
#NGINX_CPU_LIMIT=0.5
#NGINX_MEM_LIMIT=256m

# Alerter Configuration
# Resource Limits
#ALERTER_CPU_LIMIT=0.25
#ALERTER_MEM_LIMIT=128m

# Filebeat Configuration
# Resource Limits
#FB_CPU_LIMIT=0.5
#FB_MEM_LIMIT=256m

# Host Configuration
# Set this to your server's IP or domain name
HOST_ADDRESS=localhost

# Email Alerts - Uncomment and configure to enable email alerts
#SMTP_SERVER=smtp.gmail.com
#SMTP_PORT=587
#SMTP_USER=your_email@gmail.com
#SMTP_PASSWORD=your_app_password
#ALERT_EMAIL=recipient@example.com

# Webhook Alerts - Uncomment and configure to enable webhook alerts
#WEBHOOK_URLS=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Log Retention (days)
LOG_RETENTION=30 