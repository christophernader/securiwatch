# SecuriWatch Environment Configuration

# Elasticsearch Configuration
ES_HEAP_SIZE=1g
ES_CLUSTER_NAME=securiwatch-cluster

# Kibana Configuration
KIBANA_PORT=5601

# Wazuh Configuration
WAZUH_PORT=8080
WAZUH_API_USER=admin
WAZUH_API_PASSWORD=securiwatch

# Logstash Configuration
LS_HEAP_SIZE=512m

# Host Configuration
# Set this to your server's IP or domain name
HOST_ADDRESS=localhost

# Email Alerts - Uncomment and configure to enable email alerts
#SMTP_SERVER=smtp.gmail.com
#SMTP_PORT=587
#SMTP_USER=your_email@gmail.com
#SMTP_PASSWORD=your_app_password
#ALERT_EMAIL=recipient@example.com

# Webhook Alerts - Uncomment and configure to enable webhook alerts
#WEBHOOK_URLS=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Log Retention (days)
LOG_RETENTION=30 